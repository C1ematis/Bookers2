<div class= "container">
  <div class= "row">
    <div class= "col-md-3" >
      <%= render 'users/info', user: @user %>
      <%= render 'books/new' %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class= "table table-bordered">
        <tbody>
          <tr>
            <td <%= table = @book.user.id == current_user.id ? "width= 50%" : "colspan= 2" %>>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @book.user, :profile_image, size:"40x40", format: 'jpeg', fallback:"no_image.jpg" %>
                <%= @user.name %>
              <% end %>
            </td>
            <% if @book.user.id == current_user.id %>
              <td class="d-flex justify-content-around">
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
              </td>
            <% end %>
          </tr>
          <tr>
            <th width= "50%" >tag</th>
            <td id= "favorite-btn<%= @book.id %>" class= "text-nowrap", rowspan= "2"  align="center"></td>
              <script>
                $(document).on('turbolinks:load', function () {
                  $('#favorite-btn<%= @book.id %>').html("<%= j(render 'favorites/favorite-btn', book: @book) %>");
                });
              </script>
          </tr>
          <tr>
            <td>
            <% @tag_list.each do |tag| %>
              <%= link_to tag.tag_name, books_path(word: tag.tag_name, search_kind: 'タグ') %>
            <% end %>
            </td>
          </tr>
          <tr>
            <th colspan= "2">Title</th>
          </tr>
          <tr>
            <td colspan= "2"><%= link_to @book.title, book_path(@book) %></td>
          </tr>
          <tr>
            <th colspan= "2">Option</th>
          </tr>
          <tr>
            <td colspan= "2"><%= @book.body %></td>
          </tr>
        </tbody>
      </table>

      <table class= "table table-borderless table-sm mt-4" id= "comment">
         <%= render 'book_comments/comment', book: @book, user: @user %>
      </table>

      <div class= "form-group">
        <%= form_with(model:[@book, @book_comment]) do |f| %>
          <%= f.text_area :comment, class:"form-control form-group" , id: "comment-area"%>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>